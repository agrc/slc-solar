.esriPopup .contentPane
    overflow hidden
.popup-widget
    height 100%
    position absolute
    top 50px
    background-color white
    z-index 99
    width 420px
    right - @width
    box-shadow inset 0 1px 10px rgba(0, 0, 0, 0.1)
    .padder
        padding 10px
        div[data-dojo-attach-point='chartDiv']
            display none
    .btn-group
        margin-bottom 10px
    .loader
        z-index 100
        position absolute
        width 32px
        height 32px
        background url('../resources/images/loader.gif')
        top 174px
        left 190px
        display none
    div[data-dojo-attach-point='calculationsDiv']
        margin-top 10px
    .slider
        width 100%
        margin-top 7px
    .help-block
        margin-top 0
        font-size 0.85em
    .form-horizontal
        padding-right 20px
        .control-label
            padding-right 0
