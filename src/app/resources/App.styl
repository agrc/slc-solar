@import '../../bootstrap/dist/css/bootstrap.css'
@import '../../esri/css/esri.css'
@import '../../agrc/resources/map/BaseMap.css'
@import '../../agrc/resources/locate/FindAddress.css'
@import 'SolarOverlayControls.css'
@import '../../seiyria-bootstrap-slider/dist/css/bootstrap-slider.css'
@import 'Popup.css'
@import '../../layer-selector/resources/LayerSelector'

body
    overflow hidden

.app
    &, .agrc-container
        width 100%
        height 100%
        margin 0
        padding 0
        overflow hidden
    .map-div
        width 100%
        position absolute
        top 50px
        bottom 0
    .find-address
        width 250px
    .navbar-nav .dropdown
        margin-right 10px
    .dropdown-menu
        padding 15px
    .dropdown-menu .control-group
        margin 0
    .find-address .form-group:nth-child(3)
        margin-bottom 0
    /* override bootstrap for map tooltip */
    .map-div .tooltip
        z-index 9999
        opacity 1
    .layer-selector
        display none
.slider-selection
    background #BABABA
